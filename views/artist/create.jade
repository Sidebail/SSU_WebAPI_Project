extends ../layout


block content
  a.btn(href="/artist") Go Back
  form(method="POST" action="/artist/create" style="text-align: center;")
    p <u>Artist Name</u>
      br
      input(name="name" placeholder="Artist's Name" required=true)
    p <u>Notes</u>
      br
      textarea(name="notes" placeholder="Extra notes" required=false style="width:200px; height:200px; resize:both; overflow: auto;")
    p<u>Image Link</u>
      br
      input(name="image" placeholder="Image link" required=false)
    p 
      button(type="submit") Create Artist