extends ../layout

block content
    #artistDet_cont
        h1= artist.name
        ul
            li
                img.image(src='#{artist.image}' alt="Image not loaded lol")
            li
                p About the artist:
                p= artist.notes
    #buttons_cont
        a(href="/artist") Go Back 
        if(!isAuthenticated)
            a(href="/artist/" + artist._id + "/update") Update Artist 
            a(href="/artist/" + artist._id + "/delete") Delete