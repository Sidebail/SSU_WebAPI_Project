extends ../layout

block content
    #artistDet_cont
        h1= artist.name
        #buttons_cont
        a.btn.btn-back(href="/artist") Go Back 
        if(user != null && user.role == "admin")
            a.btn(href="/artist/" + artist._id + "/update") Update Artist  
            a.btn(href="/artist/" + artist._id + "/delete") Delete
        ul(style="text-align: center;")
            li
                img.image(src='#{artist.image}' alt="Image not loaded lol")
            li
                h5 <u>About the artist</u>
                p= artist.notes
    