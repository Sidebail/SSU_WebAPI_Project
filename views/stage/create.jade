extends ../layout


block content
  a(href="/stage") Go Back
  form(method="POST" action="/stage/create" style="text-align: center;")
    p<u>Stage Name</u>
      br
      input(name="name" placeholder="Stage Name" required=true)
    p<u>Size</u>
      br
      input(name="size" placeholder="Size" required=true)
    p<u>Notes</u>
      br
      textarea(name="notes" placeholder="Notes" required=false style="width:200px; height:200px; resize:both; overflow: auto;")
    p<u>Image Link</u>
      br
      input(name="image" placeholder="Image link" required=false)
    p 
      button(type="submit") Create Stage